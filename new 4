        <?php

        // connect with database
		
				
		$host = 'localhost';                // database server name
        $username = 'sin10461_admin';      	// your database username
        $password = 'Gurkirat@27';        	// your database password
        $dbname = 'sin10461_MyDatabase';   		// database name
                                            

        //Set the connection command
        $conn = mysqli_connect($host, $username, $password, $dbname);

       // Verify if connection wasn't established
        if (empty($conn)){
            die ("Connection Failed: " . mysqli_connect_error());

            // query to select data from table
                $query = "select * from tblProducts;";

            // execute the query
                $result = mysqli_query($conn, $query);

            // check if some rows were fetched
                if (mysqli_num_rows($result) > 0)
                {
                    $i = 1; // to print the S. No. of each row

                    // loop through all the rows of the fetched data
                    while ($row = mysqli_fetch_assoc($result))
                    {
                        echo "<tr>";
                        echo "<td>$i</td>";
                        echo "<td>" . $row['productName'] . "</td>";
                        echo "<td>" . $row['productPrice'] . "</td>";
                        echo "</tr>";

                        $i++;
                    }
                }
                else
                {
                    echo "No Rows Fetched!";
                }

		
		}		  
			else{
       // Verify if connection wasn't established
        

            // query to select data from table
            
					$searchq=$_REQUEST['search'];
					$query = "select * from tblProducts where productName like '%" . $searchq . "%';";

            // execute the query
                $result = mysqli_query($conn,$query);

            // check if some rows were fetched
                if (mysqli_num_rows($result) > 0)
                {
                    $i = 1; // to print the S. No. of each row

                    // loop through all the rows of the fetched data
                    while ($row = mysqli_fetch_assoc($result))
                    {
                        echo "<tr>";
                        echo "<td>$i</td>";
                        echo "<td>" . $row['productName'] . "</td>";
                        echo "<td>" . $row['productPrice'] . "</td>";
                        echo "</tr>";

                        $i++;
                    }
                }
                else
                {
                    echo "No Rows Fetched!";
			}}

        ?>
    </table>